code = "shader_type canvas_item;

uniform float frequency=6;
uniform float depth = 0.015;
uniform float time_scale = 1;

uniform float brightness=1.2;
uniform float contrast=1.2;
uniform float saturation=1.2;

uniform sampler2D vignette;

void fragment() {
	vec3 vignette_color = texture(vignette,UV).rgb;
	vec2 uv = SCREEN_UV;
	uv.x += sin(uv.y*frequency+TIME*time_scale)*depth;
	uv.x = clamp(uv.x,0,1);
	vec3 c = textureLod(SCREEN_TEXTURE,uv,(1.0-vignette_color.r)*4.0).rgb;
	c.rgb = mix(vec3(0.0),c.rgb,brightness);
	c.rgb = mix(vec3(0.5),c.rgb,contrast);
	c.rgb = mix(vec3(dot(vec3(1.0),c.rgb)*0.33333),c.rgb,saturation);
	c.rgb*= texture(vignette,UV).rgb;
	COLOR.rgb=c;
}
